<Page x:Class="Wungle.HomeScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wungle"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="HomeScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="background_wall.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Image x:Name="imageHomeIcons" HorizontalAlignment="Left" Height="1080" Margin="0" VerticalAlignment="Top" Width="1920" Source="wall_homepage.png"/>
        <Button x:Name="btnRoutes" Content="Button" HorizontalAlignment="Left" Height="539" Margin="66,58,0,0" VerticalAlignment="Top" Width="608" Opacity="0" Click="BtnRoutes_Click"/>
        <Button x:Name="btnParty" Content="Button" HorizontalAlignment="Left" Margin="1143,111,0,0" VerticalAlignment="Top" Width="619" Height="417" Opacity="0" Click="BtnParty_Click"/>
        <Button x:Name="btnClimber" Content="Button" HorizontalAlignment="Left" Height="485" Margin="698,539,0,0" VerticalAlignment="Top" Width="942" Opacity="0" Click="BtnClimber_Click"/>
    </Grid>
</Page>
